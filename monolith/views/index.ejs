<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Ma Super TODO</title>
        <link rel="stylesheet" type="text/css" href="/css/theme.css">
    </head>
    <body>
        
        <header>
            <nav>
                <ul>
                    <li><a href="/">Home</a></li>
                   
                    <% if(session.user){ %>
                        <li><a href="/logout">Logout</a></li>
                      <% } else{ %>  
                        <li><a href="/login">Login</a></li>
                        <li><a href="/register">Register</a></li>
                     <% } %>
                </ul>
            </nav>
        </header>

        <main>
            <% if(typeof prenom === "undefined"){ %>
                <% if(session.user){ %>
                    <h1>Hello <%=session.user.lastName %></h1>
                  <% } else{ %>  
                    <h1>Hello World </h1>
                 <% } %>
               
            <% } else { %>
                <h1>Hello <%= prenom %></h1>
            <% } %>
        </main>

    </body>
</html>
